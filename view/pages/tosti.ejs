<!DOCTYPE html>
<html lang="en">
<% include ../partials/head %>
<body class="centering">
    <header class="centering">
        <h1>Maak Uw Tosti</h1>
    </header>
    <% if(!settings.javascript) { %>
        <% if (!settings.tosti) { %>
            <% include ../partials/forms/jsNO/bread %>
        <% } else if(settings.tosti.length === 1) {%>
            <% include ../partials/forms/jsNO/beleg %>
        <% } else if(settings.tosti.length === 2){%>
            <% include ../partials/forms/saus %>
        <% } %>
    <% } else if(settings.javascript){ %>
        <% if (!settings.tosti) { %>
            <% include ../partials/forms/jsYES/bread %>
        <% } else { %>
            <% if(settings.tosti.length === 1){ %>
                <% include ../partials/forms/jsYES/beleg %>
            <% } else if(settings.tosti.length === 2){ %>
                <% include ../partials/forms/saus %>
            <% } else if(settings.tosti.length > 2) {%>
                <% include ../partials/forms/result %>
            <% } %>
        <% } %>
    <% } %>
    <!-- <script type="module" src="js/bread.js"></script> -->
</body>
</html>