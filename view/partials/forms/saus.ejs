<main id="saus" class="spaceAround">
    <div class="info">
        <h2>Saus Soort</h2>
        <p>Stap 3/4</p>
    </div>
    <div class="spaceAround keuzeScherm">
        <div id="keuzes" class="centering">
            <form class="centering" action="/add" method="POST">
                <input name="saus" type="checkbox" id="NoneSaus" value="NoneSaus">
                <div class="saus spaceAround">
                    <input name="saus" type="checkbox" id="Ketchup" value="Ketchup">
                    <label class="sausOptie centering" for="Ketchup">
                        <img src="img/Saus/Ketchup.png" alt="">
                        <p>Ketchup</p>
                    </label>
                    <input name="saus" type="checkbox" id="Mayonaise" value="Mayonaise">
                    <label class="sausOptie centering" for="Mayonaise">
                        <img src="img/Saus/Mayonaise.png" alt="">
                        <p>Mayonaise</p>
                    </label>
                    <input name="saus" type="checkbox" id="Mosterd" value="Mosterd">
                    <label class="sausOptie centering" for="Mosterd">
                        <img src="img/Saus/Mosterd.png" alt="">
                        <p>Mosterd</p>
                    </label>
                    <label class="NoneSaus centering" for="NoneSaus">
                        <img src="img/Saus/None.png" alt="">
                        <p>Geen</p>
                    </label>
                </div>
                <button type="submit">Next</button>
            </form>
        </div>
    </div>
</main>